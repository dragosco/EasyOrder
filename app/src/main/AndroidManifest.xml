<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="motacojo.mbds.fr.easyorder">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:label="RegisterActivity"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="motacojo.mbds.fr.easyorder.MainActivity" />
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="LoginActivity"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="motacojo.mbds.fr.easyorder.MainActivity" />
        </activity>
        <activity
            android:name=".WelcomeActivity"
            android:label="WelcomeActivity"
            android:parentActivityName=".LoginActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="motacojo.mbds.fr.easyorder.LoginActivity" />
        </activity>
        <activity android:name=".PersonListActivity" />
        <activity android:name=".ProductListActivity" />
        <activity android:name=".OrderListActivity"></activity>
    </application>

</manifest>