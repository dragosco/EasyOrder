<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_welcome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="motacojo.mbds.fr.easyorder.WelcomeActivity">

    <TextView
        android:text="Bienvenue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="133dp"
        android:id="@+id/tv_Bienvenue_Welcome"
        android:textStyle="normal|bold"
        android:textSize="24sp" />

    <TextView
        android:text="John Doe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_Bienvenue_Welcome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:id="@+id/tv_User_Welcome"
        android:textSize="30sp"
        android:textStyle="normal|bold|italic" />

    <Button
        android:text="Voir liste d'utilisateurs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="63dp"
        android:id="@+id/btn_versListUtilisateurs"
        android:layout_below="@+id/tv_User_Welcome"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="VOIR LISTE DE PRODUITS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_versListUtilisateurs"
        android:layout_centerHorizontal="true"
        android:id="@+id/btn_versListeProduits" />

    <Button
        android:text="VOIR LISTE DE COMMANDES"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_versListeProduits"
        android:layout_centerHorizontal="true"
        android:id="@+id/btn_versListeCommandes" />
</RelativeLayout>
