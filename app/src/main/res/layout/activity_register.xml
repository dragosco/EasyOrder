<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="motacojo.mbds.fr.easyorder.RegisterActivity">

    <RadioButton
        android:text="Féminin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/radioBtn_Masculin_Register"
        android:layout_toEndOf="@+id/radioBtn_Masculin_Register"
        android:layout_marginStart="11dp"
        android:id="@+id/radioBtn_Feminin_Register" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/input_Email_Register"
        android:layout_alignStart="@+id/input_Email_Register"
        android:id="@+id/input_Mdp_Register"
        android:hint="Mot de passe"
        android:textSize="14sp"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_marginTop="11dp"
        android:id="@+id/input_Email_Register"
        android:layout_below="@+id/input_Tel_Register"
        android:layout_alignStart="@+id/input_Tel_Register"
        android:hint="E-mail"
        android:layout_alignParentEnd="true"
        android:textSize="14sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/input_Mdp_Register"
        android:layout_alignStart="@+id/input_Mdp_Register"
        android:id="@+id/input_MdpConfirm_Register"
        android:hint="Confirmation mot de passe"
        android:textSize="14sp"
        android:layout_alignEnd="@+id/input_Mdp_Register" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/input_Prenom_Register"
        android:hint="Prénom"
        android:layout_below="@+id/input_Nom_Register"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textSize="14sp" />

    <RadioButton
        android:text="Masculin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioBtn_Masculin_Register"
        android:layout_below="@+id/input_Prenom_Register"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/input_Tel_Register"
        android:hint="Téléphone portable"
        android:layout_below="@+id/radioBtn_Feminin_Register"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textSize="14sp" />

    <TextView
        android:text="Veuillez saisir vos informations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_Message_Register"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/input_Nom_Register"
        android:background="@drawable/input_style"
        android:drawableLeft="@drawable/ic_person_black_24dp"
        android:padding="10dp"
        android:hint="Votre nom"
        android:textSize="14sp"
        android:layout_below="@+id/tv_Message_Register"
        android:layout_alignParentStart="true"
        android:layout_marginTop="41dp"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="S'enregistrer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_SignUp_Register"
        android:layout_below="@+id/input_MdpConfirm_Register"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp"
        android:layout_alignParentEnd="true"
        android:background="@android:color/holo_green_light" />
</RelativeLayout>
